<%- include('./partials/head') %>

<main>
    <section class="heading">
        <h1>Welkom bij het <span class="yellow">digitale</span> klassenboek van FDND leerjaar 2022/2023 <span aria-hidden>üèì</span></h1>
    </section>
    <section class="filter-bar">
        <div class="inner-bar">
            <div class="squad-select">
                <a href="/?squad=squad-a-2022" class="filterBTN">Squad A</a>
                <a href="/?squad=squad-b-2022" class="filterBTN">Squad B</a>
                <a href="/?squad=squat-c-2022" class="filterBTN">Squad C</a>
            </div>
            <div class="filter-select">
                <a href="/?orderBy=name&direction=ASC" class="filterBTN">Naam A-Z</a>
                <a href="/?orderBy=name&direction=DEC" class="filterBTN">Naam Z-A</a>
            </div>
        </div>
    </section>

    <h2> <%= squad.name %> </h2>

    <section class="profile-grid">
        <div id="card-container" class="container">
            <% squad.members.forEach(member => { %>
            <div class="card-item">
                <div class="inner-card">
                    <p class="like-btn"><i class="fa fa-heart"></i></p>
                    <img class="card-img" src="<%= member.avatar %>" alt="Profiel foto van <%= member.name %>" onerror="this.onerror=null;this.src='/static/img/fallback-pf.png';">
                    <h3 class="card-name"><%= member.name %> <%= member.prefix %> <%= member.surname %></h3>
                    <% if(member.gitHubHandle) { %>
                        <p class="card-github"><%= member.gitHubHandle %></p>
                    <% } else { %>
                        <p>Niet ingevuld</p>
                    <% } %>
                    <a href="<%= "https://github.com/" + member.gitHubHandle %>" target="_blank" class="card-button">GitHub</a>
                </div>
            </div>
            <% }) %>
        </div>
    </section>
</main>

<%- include('./partials/foot') %>
